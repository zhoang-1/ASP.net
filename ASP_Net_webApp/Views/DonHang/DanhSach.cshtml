@model IEnumerable<ASP_Net_webApp.Models.DonHang>

@{
    ViewBag.Title = "Danh Sách Đơn Hàng";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
    ViewBag.active = 6;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h4>Danh Sách Đơn Hàng</h4>
            <a href="~/DonHang/ThemDonHang" style="float:right;">Thêm Đơn Hàng</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>
                        Tên Khách Hàng
                    </th>
                    <th>
                        Số Điện Thoại
                    </th>
                    <th>
                        Địa Chỉ Giao Hàng
                    </th>
                    <th>
                        Ngày Đặt Hàng
                    </th>
                    <th>#</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>
                            <a href="~/DonHang/ChiTiet?idDonHang=@item.ID">@item.TenKhachHang</a>
                        </td>
                        <td>
                            @item.SoDienThoai
                        </td>
                        <td>
                            @item.DiaChiGiaoHang
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayDatHang)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "CapNhatDonHang", new { idDonHang = item.ID }) |
                            @Html.ActionLink("Delete", "XoaDonHang", new { idDonHang = item.ID })
                        </td>
                    </tr>
                }

            </table>

        </div>
    </div>
</div>
