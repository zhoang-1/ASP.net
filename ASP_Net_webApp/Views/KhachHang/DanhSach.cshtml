@model IEnumerable<ASP_Net_webApp.Models.KhachHang>

@{
    ViewBag.Title = "Danh Sach Khach Hang";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
    ViewBag.active = 6;
}

<div class="container" style="margin-top: 60px; min-height: 80vh;">
    <div class="col-md-12">
        <h5 class="" style=" ">
            Danh Sach Khach Hang
            <a href="~/KhachHang/ThemMoi" style="float:right;">Them moi</a>
        </h5>
       
    </div>
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Tên Khách Hàng
                </th>
                <th>
                    Số Điện Thoại
                </th>
                <th>
                    Địa Chỉ Nhận Hàng
                </th>
                <th>
                    Email
                </th>
                <th>
                    Giới Tính
                </th>
                <th>#</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenkhachHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoDienThoai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiTinh)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </table>
    </div>     
</div>
